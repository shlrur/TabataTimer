<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#00000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tabata_setting_exercise_time_title"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Exercise Time"
                android:textColor="#111111"
                android:textSize="25sp" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tabata_setting_exercise_time_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textColor="#111111"
                android:textSize="25sp" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/tabata_setting_exercise_time_seekbar"
            style="@style/SeekBarHoloSAPStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="39" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#00000000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#FF909090" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#00000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tabata_setting_rest_time_title"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Rest Time"
                android:textColor="#111111"
                android:textSize="25sp" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tabata_setting_rest_time_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textColor="#111111"
                android:textSize="25sp" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/tabata_setting_rest_time_seekbar"
            style="@style/SeekBarHoloSAPStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="19" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#00000000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#FF909090" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#00000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tabata_setting_sets_title"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sets"
                android:textColor="#111111"
                android:textSize="25sp" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tabata_setting_sets_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textColor="#111111"
                android:textSize="25sp" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/tabata_setting_sets_seekbar"
            style="@style/SeekBarHoloSAPStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="14" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#00000000" />

        <Button
            android:id="@+id/tabata_setting_send_email"
            style="@style/ButtonHoloSAPStyle"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="Sending e-mail to app director"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>